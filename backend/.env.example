# MongoDB Connection (REPLACE WITH YOUR ACTUAL CONNECTION STRING)
MONGODB_URI=mongodb://localhost:27017/talentbridge
# For cross-device access with MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/talentbridge

# JWT Secret (GENERATE A SECURE RANDOM STRING)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Server Port
PORT=5000

# Environment
NODE_ENV=development

# CORS - Allowed origins (comma-separated for production)
# In development, all origins are allowed by default
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
